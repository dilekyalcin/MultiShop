@model UpdateProductDetailDto
@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Product Description and Information Update Page</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="ProductDetailID" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>Product Description</label>
                        <textarea rows="5" class="form-control" asp-for="ProductDescription"></textarea>
                        <br />
                        <label>Product Information</label>
                        <textarea rows="5" class="form-control" asp-for="ProductInfo"></textarea>
                        <br />
                        <button class="btn btn-success">Update Informations</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>





