@model UpdateCargoCompanyDto

@{
    ViewData["Title"] = "UpdateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Adding Cargo Company Page</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="cargoCompanyId" />
                        <label>Cargo Company Name</label>
                        <input type="text" class="form-control" asp-for="cargoCompanyName" />
                        <br />
                        <button class="btn btn-success">Update Cargo Company</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
