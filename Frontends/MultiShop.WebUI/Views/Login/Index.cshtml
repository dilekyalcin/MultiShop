@model CreateLoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>MultiShop Login Page</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/fonts/line-awesome/css/line-awesome.min.css">
	<!-- Jquery -->
	<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body class="form-v4">
	<div class="page-content">
		<div class="form-v4-content">
			<div class="form-left">
				<h3>MultiShop E-Commerce</h3>
				<p class="text-1">Log in now to carry out e-commerce transactions through our MultiShop project and be informed about discounted products and opportunities.</p>
				<p class="text-2">You must log in to shop, add products to your cart and view your product list.If you do not have an account, you can register below.</p>
				<div class="form-left-last">
					<a href="/Register/Index/" class="account" style="height: 150px; width:150px; font-size: 10px; padding: 10px; text-align: center; line-height: 80px !important;">Register</a>
				</div>
			</div>
			<form class="form-detail" method="post">
				<h3>MultiShop Login Form</h3>

				<div class="form-row">
					<label for="your_username">User Name</label>
					<input type="text" id="your_username" asp-for="Username" class="input-text" required>
				</div>
				<div class="form-row">
					<label for="your_password">Password</label>
					<input type="password" id="your_password" asp-for="Password" class="input-text" required>
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Log In">
				</div>
			</form>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>

</body>
</html>
